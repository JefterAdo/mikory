# Configuration de la base de données
DATABASE_URL="mysql://user:password@localhost:3306/mikory"

# Configuration de l'application
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="votre-secret-tres-long-et-securise"

# Configuration des téléchargements
UPLOAD_DIR="./public/uploads/media"
MAX_FILE_SIZE="5242880" # 5MB en octets

# Configuration ClamAV (optionnel mais recommandé)
CLAMAV_ENABLED="false"
CLAMAV_HOST="localhost"
CLAMAV_PORT="3310"

# Configuration du stockage externe (ex: AWS S3)
# STORAGE_PROVIDER="local" # 'local' ou 's3'
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# AWS_BUCKET_NAME="mikory-uploads"

# Configuration du mode débogage
NODE_ENV="development"
# NODE_ENV="production"

# Configuration du taux de journalisation
LOG_LEVEL="info" # error, warn, info, debug

